<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sunway.android.memoapp">

    <uses-permission android:name="android.permission.MEDIA_CONTENT_CONTROL" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".util.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".view.MainActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.SEARCH" />

                <meta-data
                    android:name="android.app.searchable"
                    android:resource="@xml/searchable" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.TextDetailsMemoActivity"></activity>
        <activity android:name=".view.DrawingMemoActivity"></activity>
        <activity android:name=".view.ReminderActivity"></activity>

        <receiver
            android:name=".controller.AlarmReceiver"
            android:process=":remote" />

        <activity android:name=".view.ReminderListActivity"></activity>
    </application>

</manifest>